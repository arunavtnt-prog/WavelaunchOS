// Prisma schema for Wavelaunch Studio Vision Form
// Connects to Neon PostgreSQL database (shared with Mission Control)

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Application model for Vision Form submissions
model Application {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  fullName         String
  email            String
  instagramHandle  String?
  tiktokHandle     String?
  country          String
  industryNiche    String
  age              Int

  professionalMilestones String @db.Text
  personalTurningPoints  String @db.Text
  visionForVenture       String @db.Text
  hopeToAchieve          String @db.Text

  targetAudience         String @db.Text
  demographicProfile     String @db.Text
  targetDemographicAge   String
  audienceGenderSplit    String
  audienceMaritalStatus  String
  currentChannels        String @db.Text

  keyPainPoints  String @db.Text
  brandValues    String @db.Text

  differentiation        String @db.Text
  uniqueValueProps       String @db.Text
  emergingCompetitors    String @db.Text

  idealBrandImage        String @db.Text
  inspirationBrands      String? @db.Text
  brandingAesthetics     String @db.Text
  emotionsBrandEvokes    String @db.Text
  brandPersonality       String
  preferredFont          String

  productCategories      String @db.Text
  otherProductIdeas      String? @db.Text

  scalingGoals           String @db.Text
  growthStrategies       String @db.Text
  longTermVision         String @db.Text
  specificDeadlines      String? @db.Text
  additionalInfo         String? @db.Text

  zipFilePath            String?
  zipFileName            String?
  zipFileSize            Int?
  termsAccepted          Boolean @default(false)

  status                 String  @default("PENDING")
  reviewedAt             DateTime?
  reviewNotes            String? @db.Text

  convertedToClientId    String?

  @@index([email])
  @@index([createdAt])
  @@index([status])
}
