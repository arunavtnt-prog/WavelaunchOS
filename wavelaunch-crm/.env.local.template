# .env.local Template for Mac

# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git (it's in .gitignore)

# ============================================
# REQUIRED - App won't start without these
# ============================================

# Database (SQLite for local dev - creates file in data/ folder)
DATABASE_URL="file:./data/wavelaunch.db"

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET=""  # PASTE YOUR GENERATED SECRET HERE

# Claude API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=""  # PASTE YOUR API KEY HERE

# ============================================
# OPTIONAL - App works without these
# ============================================

# Email Service (Resend) - for notifications
# RESEND_API_KEY="re_..."

# Or use SMTP instead of Resend
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="noreply@wavelaunch.studio"

# Redis (improves performance but app works without it)
# REDIS_URL="redis://localhost:6379"

# ============================================
# System Configuration
# ============================================

NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
LOG_LEVEL="info"

# ============================================
# Feature Flags (set to "true" to enable)
# ============================================

# Enable scheduled background tasks (backups, reminders, etc.)
ENABLE_SCHEDULER="false"

# Enable email workflow automations
ENABLE_EMAIL_WORKFLOWS="false"

# Auto-generate PDFs when documents are completed
AUTO_GENERATE_PDF="false"

# ============================================
# Storage Limits
# ============================================

MAX_FILE_SIZE_MB="10"
STORAGE_LIMIT_GB="50"

# ============================================
# Default Admin User (created by seed script)
# ============================================

ADMIN_EMAIL="admin@wavelaunch.studio"
ADMIN_PASSWORD="wavelaunch123"
