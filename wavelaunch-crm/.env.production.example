# =============================================================================
# WavelaunchOS CRM - Production Environment Variables
# =============================================================================
# Copy this file and fill in your actual values for Vercel deployment

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
# Neon PostgreSQL connection string
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL="postgresql://neondb_owner:YOUR_PASSWORD@YOUR_HOST.neon.tech/neondb?sslmode=require"

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required)
# -----------------------------------------------------------------------------
# NextAuth URL - Your Vercel app URL
NEXTAUTH_URL="https://your-app-name.vercel.app"

# NextAuth Secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-generated-secret-here"

# -----------------------------------------------------------------------------
# EMAIL (Required - Choose one option)
# -----------------------------------------------------------------------------

# Option A: Gmail SMTP (Free)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-gmail-app-password"
SMTP_FROM="noreply@wavelaunch.studio"

# Option B: Resend (Alternative)
# RESEND_API_KEY="re_..."

# Admin email for notifications
ADMIN_EMAIL="your-admin@email.com"

# -----------------------------------------------------------------------------
# APPLICATION (Required)
# -----------------------------------------------------------------------------
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-app-name.vercel.app"

# -----------------------------------------------------------------------------
# AI (Optional - Only needed for CRM features, not application form)
# -----------------------------------------------------------------------------
# ANTHROPIC_API_KEY="sk-ant-..."

# -----------------------------------------------------------------------------
# FILE UPLOADS (Optional)
# -----------------------------------------------------------------------------
MAX_FILE_SIZE_MB="25"

# -----------------------------------------------------------------------------
# ADVANCED (Optional)
# -----------------------------------------------------------------------------
# Redis - Leave empty for Vercel, uses in-memory fallback
# REDIS_URL=""

# Logging
LOG_LEVEL="info"

# Feature flags
ENABLE_SCHEDULER="false"
ENABLE_EMAIL_WORKFLOWS="true"
